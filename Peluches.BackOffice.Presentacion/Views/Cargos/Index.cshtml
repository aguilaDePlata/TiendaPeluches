@model IEnumerable<Peluches.BackOffice.Presentacion.Models.Cargo>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cargo1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sueldo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sueldo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCargo">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCargo">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCargo">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
