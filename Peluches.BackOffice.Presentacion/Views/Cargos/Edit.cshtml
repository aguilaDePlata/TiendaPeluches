@model Peluches.BackOffice.Presentacion.Models.Cargo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Cargo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCargo" />
            <div class="form-group">
                <label asp-for="Cargo1" class="control-label"></label>
                <input asp-for="Cargo1" class="form-control" />
                <span asp-validation-for="Cargo1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sueldo" class="control-label"></label>
                <input asp-for="Sueldo" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

