@model IEnumerable<Peluches.BackOffice.Presentacion.Models.Proveedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombresProv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApellidosProv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombresProv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidosProv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProveedor">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdProveedor">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdProveedor">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
